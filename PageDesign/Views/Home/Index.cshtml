<style>
    .toolbox {
        position: absolute;
        top: 70px;
        left: 22px;
        border: 1px solid black;
        width: 341px;
        height: 800px;
    }

        .toolbox .content {
            padding: 5px;
        }

    .propertyBox {
        position: absolute;
        top: 70px;
        right: 22px;
        border: 1px solid black;
        width: 341px;
        height: 800px;
    }

    .blackboard {
        border: 1px solid black;
        width: 100%;
        height: 800px;
        margin-top: 20px;
    }

    .header {
        width: 100%;
        background-color: red;
        color: white;
        font-weight: bold;
    }

    div {
        -webkit-transition: all 200ms ease-out;
        -moz-transition: all 200ms ease-out;
        -o-transition: all 200ms ease-out;
        transition: all 200ms ease-out;
    }
</style>

<!--工具箱-->
<div class="toolbox">
    <div class="header">工具箱</div>
    <div class="content">
        <button id="addButton">添加按钮</button>
        <button>添加图片</button>
    </div>
</div>

<!--属性设置-->
<div class="propertyBox">
    <div class="header">设置</div>
</div>

<!--黑板-->
<div class="blackboard">

</div>

@section scripts{
    <script src="~/Scripts/jQuery.dragmove.js"></script>
    <script src="~/Scripts/tool/button.js"></script>

    <script>
        $(function () {
            $("#addButton").click(function () {
                $(".blackboard").append($(new Button().toHtml()).dragmove());
            });
        });
    </script>
}
